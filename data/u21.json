            ]
        },
        {
            "title": "Exercise 4: Imperative with Pronouns",
            "instruction": "Supply the **imperative** with the correct pronoun (attached or placed before the verb as appropriate).",
            "examples": [
                "**Compra** il libro per me.: **Compramelo**.",
                "**Chiedi** aiuto a lei.: **Chiedile** aiuto."
            ],
            "items": [
                { "question": "**Compra** il libro per me.", "answer": "Compramelo." },
                { "question": "**Chiedi** aiuto a lei.", "answer": "Chiedile aiuto." },
                { "question": "**Prendi** quello!", "answer": "Prendilo!" },
                { "question": "**Di’** a loro la verità.", "answer": "Digli la verità." },
                { "question": "**Parla** di questo!", "answer": "Parlane!" },
                { "question": "**Alzatevi** presto, ragazzi!", "answer": "Alzatevi presto, ragazzi!" },
                { "question": "**Scrivi** una lettera a lui, Signora.", "answer": "Gli scriva una lettera, Signora." },
                { "question": "**Fai** un favore a me!", "answer": "Fammi un favore!" },
                { "question": "**Vai** là subito!", "answer": "Vacci subito!" },
                { "question": "**Prenda** questo, Signore!", "answer": "Lo prenda, Signore!" }
            ]
        },
        {
            "title": "Exercise 5: Negative Imperative with Pronouns",
            "instruction": "Supply the **negative imperative** with the pronoun either attached or placed before the verb.",
            "examples": [
                "**Prendi** quello!: **Non prenderlo**! or **Non lo prendere**!",
                "**Chiedi** aiuto a lei.: **Non chiederle** aiuto. or **Non le chiedere** aiuto."
            ],
            "items": [
                { "question": "**Prendi** quello!", "answer": "Non prenderlo! or Non lo prendere!" },
                { "question": "**Chiedi** aiuto a lei.", "answer": "Non chiederle aiuto. or Non le chiedere aiuto." },
                { "question": "**Parla** di questo!", "answer": "Non parlarne! or Non ne parlare!" },
                { "question": "**Alzatevi** presto, ragazzi!", "answer": "Non alzatevi presto, ragazzi! or Non vi alzate presto, ragazzi!" },
                { "question": "**Scrivi** a lui, Signora!", "answer": "Non gli scriva, Signora!" },
                { "question": "**Fai** un favore a me!", "answer": "Non farmelo! or Non me lo fare!" },
                { "question": "**Vai** là!", "answer": "Non andarci! or Non ci andare!" },
                { "question": "**Prendi** questo, Signore!", "answer": "Non lo prenda, Signore!" },
                { "question": "**Di’** a loro la verità!", "answer": "Non dirgli la verità! or Non gli dire la verità!" },
                { "question": "**Fate** questo, ragazzi!", "answer": "Non fatelo, ragazzi! or Non lo fate, ragazzi!" }
            ]
        },
        {
            "title": "Exercise 6: Translate with Impersonal Si",
            "instruction": "Translate the following sentences into Italian using the **impersonal 'si' construction**.",
            "examples": [
                "You buy bread at the bakery.: **Si compra** il pane al panificio.",
                "One eats pizza on Fridays.: **Si mangia** la pizza il venerdì."
            ],
            "items": [
                { "question": "You buy bread at the bakery.", "answer": "Si compra il pane al panificio." },
                { "question": "One eats pizza on Fridays.", "answer": "Si mangia la pizza il venerdì." },
                { "question": "You can see stars at night.", "answer": "Si vedono le stelle di notte." },
                { "question": "Books are read in the library.", "answer": "Si leggono i libri in biblioteca." },
                { "question": "You buy tickets at the station.", "answer": "Si comprano i biglietti alla stazione." },
                { "question": "One drinks coffee in the morning.", "answer": "Si beve il caffè al mattino." },
                { "question": "Vegetables are sold at the market.", "answer": "Si vendono le verdure al mercato." },
                { "question": "You can watch films at the cinema.", "answer": "Si guardano i film al cinema." },
                { "question": "One takes photos on holiday.", "answer": "Si fanno le foto in vacanza." },
                { "question": "Newspapers are bought at the newsstand.", "answer": "Si comprano i giornali all’edicola." }
            ]
        }
    ]
