        {"question": "a + l’ospedale", "answer": "all’ospedale"},
        {"question": "da + la zia", "answer": "dalla zia"},
        {"question": "da + lo studente", "answer": "dallo studente"},
        {"question": "da + il dentista", "answer": "dal dentista"},
        {"question": "da + l’aeroporto", "answer": "dall’aeroporto"},
        {"question": "da + gli uffici", "answer": "dagli uffici"},
        {"question": "da + le colleghe", "answer": "dalle colleghe"},
        {"question": "da + i ministri", "answer": "dai ministri"},
        {"question": "in + l’albergo", "answer": "nell’albergo"},
        {"question": "in + lo stipendio", "answer": "nello stipendio"},
        {"question": "in + la casa", "answer": "nella casa"},
        {"question": "in + gli anni", "answer": "negli anni"},
        {"question": "in + i cassetti", "answer": "nei cassetti"},
        {"question": "in + le camere", "answer": "nelle camere"},
        {"question": "in + il frigo", "answer": "nel frigo"},
        {"question": "su + il tavolo", "answer": "sul tavolo"},
        {"question": "su + la sedia", "answer": "sulla sedia"},
        {"question": "su + lo scaffale", "answer": "sullo scaffale"},
        {"question": "su + le spalle", "answer": "sulle spalle"},
        {"question": "su + i libri", "answer": "sui libri"},
        {"question": "su + gli alberi", "answer": "sugli alberi"},
        {"question": "su + l’idea", "answer": "sull’idea"}
      ]
    },
    {
      "title": "Exercise 2",
      "instruction": "Complete the sentences with the correct prepositions and, where necessary, combine them with the definite article.",
	  "examples": ["Vengo ——— (la) stazione: dalla"],
      "items": [
        {"question": "Carla abita ——— Budapest.", "answer": "a"},
        {"question": "Parigi è ——— Francia.", "answer": "in"},
        {"question": "Mangiate ——— (il) ristorante?", "answer": "al"},
        {"question": "Torniamo ——— un’ora.", "answer": "fra or tra"},
        {"question": "Hai molto ——— fare?", "answer": "da"},
        {"question": "Devi scrivere ——— (la) nonna.", "answer": "alla"},
        {"question": "Esco ——— Massimo.", "answer": "con"},
