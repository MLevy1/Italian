                { "question": "Torniamo ____ casa.", "answer": "a" },
                { "question": "Lavoro ____ banca.", "answer": "in" },
                { "question": "Studiano ____ biblioteca.", "answer": "in" },
                { "question": "Metto i libri ____ tavolo.", "answer": "sul" },
                { "question": "Scrivo ____ quaderno.", "answer": "sul" },
                { "question": "È una borsa ____ pelle.", "answer": "di" },
                { "question": "È un tavolo ____ legno.", "answer": "di" },
